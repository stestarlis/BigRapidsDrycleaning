<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BRDryCleaning</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Contact.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BRDryCleaning.styles.css" asp-append-version="true" />
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="https://unpkg.com/bootstrap-table@1.22.2/dist/bootstrap-table.min.css">

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BRDryCleaning</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Community">Community</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Feedback" hidden="@(SystemState.Instance.Customer == null)">Feedback</a>
                        </li>
                    </ul>

                    <div class="text-end">
                        <table>
                            <tr>
                                @if (SystemState.Instance.Customer != null)
                                {
                                    <td>
                                        <div style="padding-right: 12px; font-size: 18px;">
                                            @if (DateTime.Now.Hour <= 12)
                                            {
                                                <em>
                                                    Good Morning, @(SystemState.Instance.Customer.FirstName)
                                                </em>
                                            }
                                            else if (DateTime.Now.Hour <= 16)
                                            {
                                                <em>
                                                    Good Afternoon, @(SystemState.Instance.Customer.FirstName)
                                                </em>
                                            }
                                            else
                                            {
                                                <em>
                                                    Good Evening, @(SystemState.Instance.Customer.FirstName)
                                                </em>
                                            }
                                        </div>
                                    </td>

                                    <td>
                                        <button type="button" class="btn-clear btn-outline-secondary"><a style="text-decoration: none; color: inherit;" asp-area="" asp-controller="Home" asp-action="Login">@SystemState.Instance.LoginButtonText</a></button>
                                    </td>

                                    <td>
                                        <button type="button" class="btn btn-primary"><a style="text-decoration: none; color: inherit;" asp-area="" asp-controller="Admin" asp-action="Index">Dashboard</a></button>
                                    </td>
                                }
                                else
                                {
                                    <td>
                                        <button type="button" class="btn"><a style="text-decoration: none; color: inherit;" asp-area="" asp-controller="Home" asp-action="CreateAccount">Sign-up</a></button>
                                    </td>
                                    <td>
                                        <button type="button" class="btn btn-primary"><a style="text-decoration: none; color: inherit;" asp-area="" asp-controller="Home" asp-action="Login">@SystemState.Instance.LoginButtonText</a></button>
                                    </td>
                                }
                            </tr>
                        </table>
                    </div>
                </div>
            </div>

        </nav>
    </header>
    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://unpkg.com/bootstrap-table@1.22.2/dist/bootstrap-table.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/js/bootstrap-select.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

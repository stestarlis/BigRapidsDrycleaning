    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
@if (TempData["OrderDetails"] != null)
{
    var order = TempData["OrderDetails"] as Order;

    <h1>
        Order Details
    </h1>
    <div>
        <dl>
            <dt>
                Order ID:
            </dt>
            <dd>
                @order!.Id
            </dd>
            <dt>
                Status:
            </dt>
            <dd>
                @order!.Status!.Title
            </dd>
            <dt>
                Payments:
            </dt>
            <dd>
                @foreach (var item in order.MonetaryTransactions)
                {
                    <div>
                        <span>@item.AmountPaid</span>
                        <span>@item.PaymentType.Title</span>
                    </div>
                }
            </dd>
        </dl>

        <dl>
            <dt>
                Customer:
            </dt>
            <dd>
                @order!.Account!.Customer!.FirstName @order!.Account.Customer!.LastName
            </dd>
        </dl>

        <dl>
            <dt>
                Notes:
            </dt>
            <dd>
                @order!.Notes
            </dd>
        </dl>

        <div>
            <div>
                <b>
                    Drop Off Date:
                </b> @order.DropOffDate.ToString("MMM dd, yyyy")
                <br />
                <b>
                    Created Date:
                </b> @order.CreatedDate.ToString("MMM dd, yyyy")
                <br />
                <b>
                    Estimated Complete Date:
                </b>  @order.EstimatedCompleteDate.ToString("MMM dd, yyyy")
            </div>
            <div style="display: inline-flex;">
                <div>
                </div>

                <div>
                </div>
            </div>
        </div>
    </div>
}
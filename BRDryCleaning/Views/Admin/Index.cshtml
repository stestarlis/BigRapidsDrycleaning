<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.3.2/dist/chart.umd.js" integrity="sha384-eI7PSr3L1XLISH8JdDII5YN/njoSsxfbrkCTnJrzXt+ENP5MOVBxD+l6sEG4zoLp" crossorigin="anonymous"></script>
    <link href="~/css/Admin.css" rel="stylesheet" />
    <link href="~/css/laundryLoad.css" rel="stylesheet" />
    <script src="~/js/site.js" asp-append-version="true"></script>
</head>
<div>
    <!-- Side Menu with Admin Functionalities -->
    <div class="sidebar col-md-3 col-lg-2 p-0">
        <div class="offcanvas-md" tabindex="-1" id="sidebarMenu" aria-labelledby="sidebarMenuLabel">
            <div class="offcanvas-body d-md-flex flex-column p-0 pt-lg-3 overflow-y-auto">
                <ul class="nav flex-column">

                    <!-- Dashboard -->
                    <li class="nav-item">
                        <a class="nav-link d-flex align-items-center gap-2" asp-area="" asp-controller="Admin" asp-action="Index">
                            <i class='bx bxs-dashboard'></i>
                            Dashboard
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link d-flex align-items-center gap-2" asp-area="" asp-controller="Admin" asp-action="ReadOrders">
                            <i class='bx bx-shopping-bag'></i>
                            Orders
                        </a>
                    </li>

                    <!-- Appointments -->
                    <li class="nav-item">
                        <a class="nav-link d-flex align-items-center gap-2" asp-area="" asp-controller="Admin" asp-action="ReadAppointments">
                            <i class='bx bxs-calendar'></i>
                            Appointments
                        </a>
                    </li>


                </ul>

                <hr class="my-3" hidden="@(SystemState.Instance.FilterForNonStaff)">

                <ul class="nav flex-column" hidden="@(SystemState.Instance.FilterForNonStaff)">
                    <!-- Services -->
                    <li class="nav-item">
                        <a class="nav-link d-flex align-items-center gap-2" asp-area="" asp-controller="Admin" asp-action="ReadServices">
                            <i class='bx bxs-store-alt'></i>
                            Services
                        </a>
                    </li>

                    <!-- Promotions -->
                    <li class="nav-item" hidden="@(SystemState.Instance.FilterForNonStaff)">
                        <a class="nav-link d-flex align-items-center gap-2" asp-area="" asp-controller="Admin" asp-action="ReadPromotionals">
                            <i class='bx bxs-discount'></i>
                            Promotions
                        </a>
                    </li>

                    <!-- Customers -->
                    <li class="nav-item" hidden="@(SystemState.Instance.FilterForNonStaff)">
                        <a class="nav-link d-flex align-items-center gap-2" asp-area="" asp-controller="Admin" asp-action="ReadCustomers">
                            <i class='bx bxs-user'></i>
                            Customers
                        </a>
                    </li>

                    <!-- Testimonials -->
                    <li class="nav-item" hidden="@(SystemState.Instance.FilterForNonStaff)">
                        <a class="nav-link d-flex align-items-center gap-2" asp-area="" asp-controller="Admin" asp-action="ReadTestimonials">
                            <i class='bx bx-edit-alt'></i>
                            Testimonials
                        </a>
                    </li>

                    <hr class="my-3">

                    <!-- Reset password -->
                    <li class="nav-item">
                        <a class="nav-link d-flex align-items-center gap-2" asp-area="" asp-controller="Admin" asp-action="ResetPassword">
                            <i class='bx bxs-user-account'></i>
                            Password Management
                        </a>
                    </li>

                    <hr class="my-3">

                    <!-- Settings -->
                    <li class="nav-item" hidden="@(SystemState.Instance.FilterForNonStaff)">
                        <a class="nav-link d-flex align-items-center gap-2" asp-area="" asp-controller="Admin" asp-action="Settings">
                            <i class='bx bx-cog'></i>
                            Settings
                        </a>
                    </li>

                    <!-- Log Out -->
                    <li class="nav-item">
                        <a class="nav-link d-flex align-items-center gap-2" href="/Home/login">
                            <i class='bx bx-log-out'></i>
                            Sign out
                        </a>
                    </li>
                </ul>
            </div>

        </div>

    </div>

    <!-- Main Area View -->
    <div class="col-md-10 ms-sm-auto px-md-4">

        <!-- Render Partial View or Placeholder View -->
        @if (TempData["PartialView"] != null)
        {
            <partial>
                @{
                    string viewName = TempData["PartialView"].ToString();
                    Html.RenderPartial(viewName);
                }
            </partial>
        }
        else
        {
            <partial>
                @{
                    string viewName = "Dashboard";
                    Html.RenderPartial(viewName);
                }
            </partial>
        }
    </div>
</div>
